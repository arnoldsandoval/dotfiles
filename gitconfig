	email = arnold@arnie.io
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAICf21qywyaQtu+IGPKMu5nu32GMstbtbYUEzuppUcP5I

[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input
	ignorecase = false

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = current

[color]
	ui = auto

[alias]
	# Status and info
	st = status
	s = status -s
	d = diff
	dc = diff --cached
	l = log --oneline --graph --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD

	# Branches
	br = branch
	co = checkout
	cb = checkout -b
	
	# Commits
	c = commit
	cm = commit -m
	ca = commit -a
	cam = commit -am
	amend = commit --amend
	
	# Remote
	p = push
	pl = pull
	f = fetch
	
	# Utilities
	undo = reset HEAD~1 --mixed
	unstage = reset HEAD --
	discard = checkout --
	
	# Show aliases
	aliases = config --get-regexp alias

[merge]
	conflictstyle = diff3

[diff]
	algorithm = histogram

[rerere]
	enabled = true
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = false
