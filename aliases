# General

alias vim='nvim'
alias v='vim'
alias vimt='nvim +NERDTree'
alias update="softwareupdate --all --install --force"
alias h='cd ~/'

alias ed='code ~/.zshrc'
alias ref='source ~/.zshrc'

# Internet/Network

alias fast='speedtest'
alias ip='dig +short myip.opendns.com @resolver1.opendns.com -4'
alias ipv6='dig +short AAAA myip.opendns.com @resolver1.opendns.com'
alias iplocal='ipconfig getifaddr en0'

# Git

alias g='git'
alias gs='git s'
alias gnah='git reset --hard;git clean -df'
alias gco='git checkout'
alias glol='git log --pretty=oneline' # prints one line list of commits
alias gundo='git restore --staged'
alias gb='git branch'
alias g-b='git checkout -b' # create new branch

alias s='cd ~/Sites'
alias df='cd ~/dotfiles'
alias hl='cd ~/hitloop'